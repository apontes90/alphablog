<div id="page-content">
  <h1 class="text-center "> Articles List</h1>
  <div class="container">
    <% @article.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col8 mt-4">
                  <div class="card text-center shadow mb-5 bg-white rounded">
                    <h5 class="card-header font-italic">by User 007</h5>
                        <div class="card-body">
                          <h5 class="card-title"><%=link_to article.title, article_path(article.id), class: "text-secondary" %></h5>
                          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                          <%= link_to "View", article_path(article.id), class:"btn btn-outline-success"%>
                          <%= link_to "Edit", edit_article_path(article.id), class:"btn btn-outline-info"%>
                          <%= link_to "Delete", article_path(article.id), method: :delete, data: {confirm: "Are you sure you want do delete this article?"}, class:"btn btn-outline-danger"%>
                        </div>
                      <div class="card-footer text-center">
                      <small>Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
                      </div>
                    </div>
            </div>
        </div>
    <% end %>
  </div>
</div>



